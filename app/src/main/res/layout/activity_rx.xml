<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bing_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.rxJava.RXActivity">

    <Button
        android:id="@+id/show_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showImageAction"
        android:text="@string/RX_SHOW_IMAGE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rx_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/show_image_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/IMAGE_DESCRIPTION" />
</androidx.constraintlayout.widget.ConstraintLayout>